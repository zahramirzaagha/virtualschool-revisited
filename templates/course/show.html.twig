{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_STUDENT') %}
        <a href="{{ path('app_course_registration_new', {'courseId': course.id}) }}">register</a>
    {% endif %}

    {% if is_granted('ROLE_STUDENT') or is_granted('ROLE_PARENT') %}
        <a href="{{ path('app_course_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_TEACHER') %}
        <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>
        <a href="{{ path('app_course_registration_by_course', {'courseId': course.id}) }}">registrations</a>
        <a href="{{ path('app_course_index_by_instructor', {'instructorId': app.user.id}) }}">back to list</a>
        {{ include('course/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
