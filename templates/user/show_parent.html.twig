{% block body %}
    <h3>{{ 'parent'|trans }}</h3>

    {% if app.user.getParent() %}
        <table class="table">
            <tbody>
                <tr>
                    <th>{{ 'parent_name'|trans }}</th>
                    <td>{{ app.user.getParent().name }}</td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <h6>{{ 'no_parent'|trans }}</h6>
    {% endif %}

    <a href="{{ path('app_user_edit', {'id': app.user.id}) }}">{{ 'edit'|trans }}</a>
{% endblock %}
