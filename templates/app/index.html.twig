{% extends 'base.html.twig' %}

{% block body %}
    {% for flash_success in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ flash_success }}</div>
    {% endfor %}

    <h1>Hello {{ app.user.getEmail() }}!</h1>
    <h2>You are a {{ app.user.getRoles()|join(', ') }}.</h2>
{% endblock %}
